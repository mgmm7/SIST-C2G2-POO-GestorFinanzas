<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pe.edu.upeu.gestorfinanciero.controller.UsuarioController"
            prefWidth="750" prefHeight="520"
            style="-fx-background-color: linear-gradient(to bottom right, #110f1b, #1b0e2e, #2b0b45);">

    <children>

        <VBox spacing="20" alignment="TOP_LEFT" layoutX="40" layoutY="30">

            <Label text="Configuración del Usuario"
                   style="-fx-font-size: 22px; -fx-text-fill: #d7b4ff;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Nombre de usuario" style="-fx-text-fill: #e7d7ff;"/>
                    <TextField fx:id="txtNombre" prefWidth="250"
                               style="-fx-background-radius: 8;
                                      -fx-border-radius: 8;
                                      -fx-background-color: rgba(255,255,255,0.15);
                                      -fx-border-color: #b366ff;
                                      -fx-border-width: 2;
                                      -fx-text-fill: #ffffff;
                                      -fx-prompt-text-fill: #d580ff;
                                      -fx-padding: 4 10 4 10;"/>
                </VBox>
                <Button fx:id="btnGuardarNombre"
                        text="Guardar"
                        onAction="#guardarNombre"
                        disable="true"
                        style="-fx-background-color: #8f44ff; -fx-text-fill: white; -fx-background-radius: 10;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Correo electrónico" style="-fx-text-fill: #e7d7ff;"/>
                    <TextField fx:id="txtCorreo" prefWidth="250"
                               style="-fx-background-radius: 8;
                                      -fx-border-radius: 8;
                                      -fx-background-color: rgba(255,255,255,0.15);
                                      -fx-border-color: #b366ff;
                                      -fx-border-width: 2;
                                      -fx-text-fill: #ffffff;
                                      -fx-prompt-text-fill: #d580ff;
                                      -fx-padding: 4 10 4 10;"/>
                </VBox>
                <Button fx:id="btnGuardarCorreo"
                        text="Guardar"
                        onAction="#guardarCorreo"
                        disable="true"
                        style="-fx-background-color: #8f44ff; -fx-text-fill: white; -fx-background-radius: 10;"/>
            </HBox>

            <Button fx:id="btnGuardarPass"
                    text="Actualizar contraseña"
                    onAction="#guardarPass"
                    disable="true"
                    style="-fx-background-color: #8f44ff; -fx-text-fill: white; -fx-background-radius: 10;"/>

            <Separator prefWidth="600"/>

            <Label text="Cambiar contraseña" style="-fx-font-size: 18px; -fx-text-fill: #d7b4ff;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Contraseña actual" style="-fx-text-fill: #e7d7ff;"/>
                    <PasswordField fx:id="txtPassActual" prefWidth="250"
                                   style="-fx-background-radius: 8;
                                          -fx-border-radius: 8;
                                          -fx-background-color: rgba(255,255,255,0.15);
                                          -fx-border-color: #b366ff;
                                          -fx-border-width: 2;
                                          -fx-text-fill: #ffffff;
                                          -fx-prompt-text-fill: #d580ff;
                                          -fx-padding: 4 10 4 10;"/>
                </VBox>
                <Label fx:id="iconPassActual" text="" style="-fx-font-size: 20px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Nueva contraseña" style="-fx-text-fill: #e7d7ff;"/>
                    <PasswordField fx:id="txtPassNueva" prefWidth="250"
                                   style="-fx-background-radius: 8;
                                          -fx-border-radius: 8;
                                          -fx-background-color: rgba(255,255,255,0.15);
                                          -fx-border-color: #b366ff;
                                          -fx-border-width: 2;
                                          -fx-text-fill: #ffffff;
                                          -fx-prompt-text-fill: #d580ff;
                                          -fx-padding: 4 10 4 10;"/>
                </VBox>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Confirmar contraseña" style="-fx-text-fill: #e7d7ff;"/>
                    <PasswordField fx:id="txtPassConfirm" prefWidth="250"
                                   style="-fx-background-radius: 8;
                                          -fx-border-radius: 8;
                                          -fx-background-color: rgba(255,255,255,0.15);
                                          -fx-border-color: #b366ff;
                                          -fx-border-width: 2;
                                          -fx-text-fill: #ffffff;
                                          -fx-prompt-text-fill: #d580ff;
                                          -fx-padding: 4 10 4 10;"/>
                </VBox>
                <Label fx:id="iconConfirm" text="" style="-fx-font-size: 20px;"/>
            </HBox>

        </VBox>

    </children>
</AnchorPane>
