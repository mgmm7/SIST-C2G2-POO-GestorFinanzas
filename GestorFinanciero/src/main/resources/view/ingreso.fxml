<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pe.edu.upeu.gestorfinanciero.controller.IngresoController"
            prefWidth="650" prefHeight="520"
            style="-fx-background-color: linear-gradient(to bottom right, #110f1b, #1b0e2e, #2b0b45);">

    <children>

        <Label text="Registro de Ingresos" layoutX="20" layoutY="15"
               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #d7b4ff;"/>

        <VBox layoutX="20" layoutY="50" spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

            <HBox spacing="10">
                <Label text="Monto:" style="-fx-text-fill: #e0b3ff;"/>

                <TextField fx:id="txtMonto" promptText="Monto del ingreso" prefWidth="120"
                           style="-fx-background-radius: 8; -fx-border-radius: 8;
                                  -fx-background-color: rgba(255,255,255,0.1);
                                  -fx-border-color: #bb86fc; -fx-border-width: 1.5;
                                  -fx-text-fill: #e0b3ff;"/>

                <!-- ðŸ’² Combo de moneda agregado -->
                <ComboBox fx:id="cmbMoneda" prefWidth="150" promptText="Moneda"
                          style="-fx-background-radius: 8; -fx-border-radius: 8;
                                 -fx-background-color: rgba(255,255,255,0.1);
                                 -fx-border-color: #bb86fc; -fx-border-width: 1.5;
                                 -fx-text-fill: #e0b3ff;"/>

                <Label text="DescripciÃ³n:" style="-fx-text-fill: #e0b3ff;"/>

                <TextField fx:id="txtDescripcion" promptText="Motivo o fuente" prefWidth="200"
                           style="-fx-background-radius: 8; -fx-border-radius: 8;
                                  -fx-background-color: rgba(255,255,255,0.1);
                                  -fx-border-color: #bb86fc; -fx-border-width: 1.5;
                                  -fx-text-fill: #e0b3ff;"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Registrar" onAction="#registrar"
                        style="-fx-background-color: #bb86fc; -fx-text-fill: #110f1b; -fx-font-weight: bold;"/>

                <Button text="Editar" onAction="#editar"
                        style="-fx-background-color: #bb86fc; -fx-text-fill: #110f1b; -fx-font-weight: bold;"/>

                <Button text="Eliminar" onAction="#eliminar"
                        style="-fx-background-color: #bb86fc; -fx-text-fill: #110f1b; -fx-font-weight: bold;"/>
            </HBox>

            <Label fx:id="lblSaldoIngreso" text="Total Ingresos: S/ 0.00"
                   style="-fx-font-weight: bold; -fx-text-fill: #d7b4ff;"/>
        </VBox>

        <TableView fx:id="tabla" layoutX="20" layoutY="210"
                   prefWidth="610" prefHeight="280"
                   style="-fx-background-color: rgba(255,255,255,0.05); -fx-text-fill: #e0b3ff;">
            <columns>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100"/>
                <TableColumn fx:id="colDescripcion" text="DescripciÃ³n" prefWidth="180"/>
                <TableColumn fx:id="colMonto" text="Monto" prefWidth="120"/>
                <TableColumn fx:id="colSaldo" text="Saldo" prefWidth="120"/>
            </columns>
        </TableView>

    </children>

</AnchorPane>
