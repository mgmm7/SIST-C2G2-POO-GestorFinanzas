<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pe.edu.upeu.gestorfinanciero.controller.EgresoController">

    <children>
        <Label text="Registro de Egresos" layoutX="20" layoutY="15"
               style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <VBox layoutX="20" layoutY="50" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10">
                <Label text="Categoría:"/>
                <ComboBox fx:id="cbxCategoria" prefWidth="180"/>
                <Label text="Monto:"/>
                <TextField fx:id="txtMonto" promptText="Monto del gasto" prefWidth="120"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Descripción:"/>
                <TextField fx:id="txtDescripcion" promptText="Motivo o detalle" prefWidth="320"/>
            </HBox>

            <HBox spacing="10">
                <Button text="Registrar" onAction="#registrarEgreso" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Editar" onAction="#editarEgreso" style="-fx-background-color: #FFC107; -fx-text-fill: black;"/>
                <Button text="Eliminar" onAction="#eliminarEgreso" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            </HBox>

            <!-- ✅ Renombrado -->
            <Label fx:id="lblSaldoEgreso" text="Saldo restante: S/ 0.00"
                   style="-fx-font-weight: bold; -fx-text-fill: #333;"/>
        </VBox>

        <TableView fx:id="tablaEgresos" layoutX="20" layoutY="210"
                   prefWidth="600" prefHeight="280">
            <columns>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="180"/>
                <TableColumn fx:id="colMonto" text="Monto (S/)" prefWidth="120"/>
                <TableColumn fx:id="colSaldo" text="Saldo" prefWidth="120"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>